html {
  font-size: 10px;
  color: white;
  font-family: "Open Sans", sans-serif;
}

* {
  margin: 0px;
  padding: 0px;
  box-sizing: border-box;
  outline: 0;
}

body {
  background: url(../img/torghast.jpg) no-repeat;
  background-size: cover;
  height: 100vh;
  width: 100vw;
}

#main {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

p {
  font-size: 12.8px;
}

h5 {
  font-size: 16px;
}

h4 {
  font-size: 20px;
}

h3 {
  font-size: 25px;
}

h2 {
  font-size: 31.25px;
}

h1 {
  font-size: 39.06px;
  font-weight: 600;
}

#calculatorFrame {
  background: #1b1b1b;
  border: 8px solid #C41F3B;
  padding: 40px 100px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  text-align: center;
}
#calculatorFrame .itemChoiceGroup {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  height: auto;
  width: 55%;
  margin-bottom: 3%;
}
#calculatorFrame .itemChoiceGroup h1 {
  margin-bottom: 3%;
}
#calculatorFrame .buttonGroup {
  padding: 10px;
  display: grid;
  grid-template-columns: repeat(4, auto);
  grid-gap: 10px;
  justify-content: space-evenly;
}
#calculatorFrame .calculatorButton {
  border: 2px solid #C41F3B;
  padding: 5px;
  background: none;
  font-family: "Open Sans", sans-serif;
  font-size: 16px;
  color: white;
}
#calculatorFrame .currentlySelectedButton {
  border: 3px solid #618DA6;
  font-weight: 700;
  background-color: #1b1b1b;
}